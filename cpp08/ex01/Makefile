CPP = c++ -std=c++98 -Wall -Wextra -Werror

SRC = main.cpp Span.cpp

OBJ = ${SRC:.cpp=.o}

NAME = easy

all : $(NAME)

%.o : %.cpp Span.hpp
	$(CPP) -c $< -o $@

$(NAME) : $(OBJ)
		$(CPP) $^ -o $(NAME)

clean :
	rm -f $(OBJ)

fclean : clean
	rm -f $(NAME)

re : fclean all

.PHONY : clean