CPP = c++ -std=c++98 -Wall -Wextra -Werror

SRC = scalarConverter.cpp Converter.cpp main.cpp

OBJ = ${SRC:.cpp=.o}

NAME = convert

all : $(NAME)

%.o : %.cpp scalarConverter.hpp Converter.hpp
	$(CPP) -c $< -o $@

$(NAME) : $(OBJ)
		$(CPP) $^ -o $(NAME)

clean :
	rm -f $(OBJ)

fclean : clean
	rm -f $(NAME)

re : fclean all

.PHONY : clean